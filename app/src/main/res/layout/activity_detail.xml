<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/logotext_color">
    <!-- Title UI -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:background="@color/splash_back">
        <TextView
            android:id="@+id/detail_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:gravity="center"
            android:textColor="@color/logotext_color"
            android:textSize="30dip"
            android:text="해수욕장"
            android:background="@color/splash_back"/>
    </LinearLayout>
    <View
        android:layout_height="2dip"
        android:layout_width="fill_parent"
        android:background="@color/divider_color"/>
    <ScrollView
        android:id="@+id/main_Scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <!-- 오늘의 날씨 UI -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:clickable="false">
                <ImageView
                    android:id="@+id/today_img"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_margin="5dip"/>
                <TextView
                    android:id="@+id/today_text"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dip"
                    android:layout_marginTop="5dip"
                    android:paddingLeft="15dip"
                    android:paddingTop="16dip"/>
            </LinearLayout>
            <View
                android:layout_height="2dip"
                android:layout_width="fill_parent"
                android:background="@color/divider_color"/>
            <!-- 입수 판단 UI -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:clickable="false">
                <ImageView
                    android:id="@+id/swim_img"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_margin="5dip"/>
                <TextView
                    android:id="@+id/swim_text"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dip"
                    android:layout_marginTop="5dip"
                    android:paddingLeft="15dip"
                    android:paddingTop="16dip"/>
            </LinearLayout>
            <View
                android:layout_height="2dip"
                android:layout_width="fill_parent"
                android:background="@color/divider_color"/>
            <!-- 시간별 날씨 UI 1-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:clickable="false">
                <ImageView
                    android:id="@+id/time_img1"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_margin="5dip"/>
                <TextView
                    android:id="@+id/time_text1"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dip"
                    android:layout_marginTop="5dip"
                    android:paddingLeft="15dip"
                    android:paddingTop="16dip"/>
            </LinearLayout>
            <View
                android:layout_height="2dip"
                android:layout_width="fill_parent"
                android:background="@color/divider_color"/>
            <!-- 시간별 날씨 UI 2-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:clickable="false">
                <ImageView
                    android:id="@+id/time_img2"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_margin="5dip"/>
                <TextView
                    android:id="@+id/time_text2"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dip"
                    android:layout_marginTop="5dip"
                    android:paddingLeft="15dip"
                    android:paddingTop="16dip"/>
            </LinearLayout>
            <View
                android:layout_height="2dip"
                android:layout_width="fill_parent"
                android:background="@color/divider_color"/>
            <!-- 댓글 입력창 UI -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip">
                <ImageView
                    android:id="@+id/comment_img"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:src="@drawable/message1"
                    android:layout_margin="5dip"
                    android:layout_marginRight="10dip"/>
                <EditText
                    android:id="@+id/comment_input"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:paddingLeft="15dip"
                    android:layout_marginTop="5dip"
                    android:imeOptions="actionSend"
                    android:textSize="20dip"
                    android:inputType="text"/>
                <Button
                    android:id="@+id/comment_send_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send"
                    android:layout_marginRight="10dip"
                    android:layout_marginLeft="5dip"
                    android:textColor="@color/logotext_color"
                    android:background="@drawable/round_btn"/>
            </LinearLayout>
            <View
                android:layout_height="2dip"
                android:layout_width="fill_parent"
                android:background="@color/divider_color"/>
        </LinearLayout>
    </ScrollView>
    <!-- 댓글 UI -->
    <ListView
        android:id="@+id/comment_LV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@color/divider_color"
        android:dividerHeight="2dip"
        android:clickable="false"
        android:listSelector="@android:color/transparent">
    </ListView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</LinearLayout>